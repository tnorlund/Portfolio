ARG PYTHON_VERSION=3.12
FROM public.ecr.aws/lambda/python:${PYTHON_VERSION}

# Skip system dependencies - receipt_dynamo only needs pure Python packages
# RUN microdnf clean all && \
#     microdnf install -y --nobest --nodocs python3-devel && \
#     microdnf clean all

# Copy and install receipt_dynamo package
COPY receipt_dynamo /tmp/receipt_dynamo
RUN pip install --no-cache-dir /tmp/receipt_dynamo && \
    rm -rf /tmp/receipt_dynamo

# This is a base image, no CMD needed